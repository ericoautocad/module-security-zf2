<script>
    (function( $ ) {
        $(function(){
            /* $('.telefone').inputmask({
             mask: '999-99-999-9999-9'
             })*/
            //$('.telefone').mask('(99) 9999 - 9999');
            $('.telefone').focusout(function(){
                var phone, element;
                element = $(this);
                element.unmask();
                phone = element.val().replace(/\D/g, '');
                if(phone.length > 10) {
                    element.mask("(99) 99999-9999",{placeholder:" "});
                } else {
                    element.mask("(99) 9999-99999",{placeholder:" "});
                }
            }).trigger('focusout');
        })
    })(jQuery);
</script>